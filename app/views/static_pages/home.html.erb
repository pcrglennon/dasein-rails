<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<%= link_to image_tag("banner_no_text.jpg", :border => 0, :class => "banner", :alt => "Swag Swag Swag Swag, Swag."), root_url %>
	</div>
</div>

<div class="row home-listing">
	<% @posts.each do |post| %>
	  <div class="col-md-10 col-md-offset-1">
	  	<div class="post">
	  		<h2 class="title"><%= link_to post.title, post %></h2>
	  		<h4 class="info"><%= post.admin.username %></h4>
	  		<h4 class="info"><%= post.created_at.strftime("%m/%d/%Y, %l:%M %p") %></h4>
	  		<p class="content"><%= post.content %></p>
	  	</div>
	  </div>
	<% end %>
</div>

<%= will_paginate @posts %>
<div class="row">

	<div class="col-md-6">
		<%= form_for(@player, html: { class: "form-horizontal" }) do |f| %>

		<%= render 'error_messages' %>

		<div class="form-group">
			<%= f.label:name, class: "col-sm-2 form-label" %>
			<div class="col-sm-7">
				<%= f.text_field :name, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label:nickname, class: "col-sm-2 form-label" %>
			<div class="col-sm-7">
				<%= f.text_field :nickname, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label:number, class: "col-sm-2 form-label" %>
			<div class="col-sm-2">
				<%= f.text_field :number, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label:classyear, class: "col-sm-2 form-label" %>
			<div class="col-sm-7">
				<%= f.select(:classyear , ['Freshman', 'Sophomore', 'Junior', 'Senior'],  class: "form-control") %>
			</div>
		</div>


		<div class="form-group">
			<%= f.label:height, class: "col-sm-2 form-label" %>
			<div class="col-sm-2">
				<%= f.text_field :height, class: "form-control" %>
			</div>
		</div>


		<div class="form-group">
			<%= f.label:hometown, class: "col-sm-2 form-label" %>
			<div class="col-sm-7">
				<%= f.text_field :hometown, class: "form-control" %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-7 col-sm-offset-2">
				<%= f.submit submit_text, class: "btn btn-primary" %>
			</div>
		</div>

		<% end %>

	</div>
</div>
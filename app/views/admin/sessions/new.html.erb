<% provide(:title, "Administrator Login") %>
<h1>Administrator Login</h1>

<div class="row">
  <div class="span6 offset3">
    <% params.each do |key, value| %>
    <div class="alert"><%= "#{key} -> #{value}" %></div>
    <% end %>
    <%= form_for :session, url: admin_sessions_path do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username, :value => params[:session].present? && params[:session][:username].present? ? params[:session][:username] : "" %>

        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
        <%= f.submit "Log In", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

